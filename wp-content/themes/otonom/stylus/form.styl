.form
	width 100%
	max-width: 476px;
	margin 20px auto
	display: flex;
	flex-direction: column;
	align-content: flex-start;
	+above($medium)
		margin 60px auto
	/* display: block; */
	input,textarea
		display block
		background-color rgba(0,0,0,0)
		border 2px solid white
		border-radius 8px
		color white
		width 100%
		margin-bottom: 24px;
		padding: 12px 18px;
		outline none
		font-size 16px
	textarea
		height: 100px;
	&_col
		display flex
		width 100%
		flex-direction column
		+above($medium)
			flex-direction row
			justify-content space-between
		input
			width 100%
			+above($medium)
				width 95%
		span:last-child
			justify-content: flex-end;
			display flex
	.wpcf7-submit
		@extend .filson_bold
		cursor: pointer;
		display: block;
		width auto
		padding 14px 22px
		background-color white
		color $main
		margin 40px auto 0 auto
		font-size 12px
		letter-spacing 1px
		-webkit-appearance: none;
		&:hover
			text-decoration underline
.footer div.wpcf7 .ajax-loader
	background-image: url(../img/ajax-loader.gif)
	background-repeat no-repeat
	width: 24px;
	height: 24px;
	margin-top: 12px
	background-size: 24px 24px;
.footer form .wpcf7-not-valid-tip
	display none
.footer form .wpcf7-not-valid
	border: dashed 4px white!important;
div.wpcf7-validation-errors,div.wpcf7-mail-sent-ok
	border: dashed 4px white !important;
	margin: 32px 0;
	text-align: center;
	font-size 18px
::-webkit-input-placeholder
	color white
:-moz-placeholder
	color white
::-moz-placeholder
	color white
:-ms-input-placeholder
	color white
.modal_close
	position: absolute;
	top: -32px;
	right: 0;
	color: white;
	cursor: pointer;
	background-color: $main;