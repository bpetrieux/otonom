.form
	width 100%
	max-width: 476px;
	margin 60px auto
	display: flex;
	flex-direction: column;
	align-content: flex-start;
	/* display: block; */
	input,textarea
		display block
		background-color rgba(0,0,0,0)
		border 1px solid white
		border-radius 8px
		color white
		width 100%
		margin-bottom: 20px;
		padding: 8px 4px 8px 4px;
		outline none
	textarea
		height: 100px;
	&_col
		display flex
		flex-direction row
		justify-content space-between
		input
			width 95%
		span:last-child
			justify-content: flex-end;
			display flex
	.wpcf7-submit
		cursor: pointer;
		display: inline-block;
		width: initial;
		padding 14px 22px
		background-color white
		color $main
		margin-top 40px
.footer form .wpcf7-not-valid-tip
	display none
.footer form .wpcf7-not-valid
	border: dashed 4px $main!important;
div.wpcf7-validation-errors,div.wpcf7-mail-sent-ok
	border: dashed 4px #00aeef !important;
	margin: 32px 0;
	text-align: center;
	font-size 18px
::-webkit-input-placeholder
	color white
:-moz-placeholder
	color white
::-moz-placeholder
	color white
:-ms-input-placeholder  
	color white