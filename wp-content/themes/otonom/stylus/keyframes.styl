@keyframes fadeIn
	from
		opacity: 0;
		visibility: hidden;
	to
		opacity: 1;
		visibility: visible;
@keyframes fadeOut
	from
		opacity: 1;
		visibility: visible;
	to
		opacity: 0;
		visibility: hidden;
