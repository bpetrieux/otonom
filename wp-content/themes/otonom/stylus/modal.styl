body.modal
	.modal_bg
		background-color: rgba(255,255,255,0.9);
		width 100%
		height 100%
		padding 20%
		position fixed
		top 0
		display flex
		justify-content center
		align-items center
		animation: fadeIn 1s forwards;
		cursor: pointer
		z-index 2
	.modal_wrap
		display flex
		justify-content center
		align-items center
		background-color red
		width 100%
		position relative
	.videoWrapper
		position: relative;
		padding-bottom: 56.25%;
		padding-top: 25px;
		height: 0;
		width 100%
		iframe
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
#video-start
	cursor pointer
.hidden
	opacity: 0;
	visibility: hidden;
	animation: fadeOut 1s forwards;
	display none